<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.maxciv.gui.controllers.LogInDialogController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" text="Log In">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="loginTextField" alignment="CENTER" onAction="#onClickLogInButton" prefHeight="25.0" prefWidth="210.0" promptText="Login" text="root">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="15.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="passwordTextField" alignment="CENTER" onAction="#onClickLogInButton" prefHeight="25.0" prefWidth="210.0" promptText="Password" text="1111">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="15.0" />
               </VBox.margin>
            </PasswordField>
            <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="240.0" text="Error:" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="logInButton" mnemonicParsing="false" onAction="#onClickLogInButton" prefHeight="25.0" prefWidth="220.0" text="Log in">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
